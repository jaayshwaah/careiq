{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/census-sync",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/daily-rounds-email",
      "schedule": "0 6 * * *"
    }
  ],
  "functions": {
    "src/app/api/ingest/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/search/route.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "src/app/api/census/**/*.ts": {
      "maxDuration": 45,
      "memory": 512
    },
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "src/app/api/care-plan-analysis/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "src/app/api/incident-reports/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "src/app/api/upload-facility-docs/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    }
  },
  "env": {
    "TRANSFORMERS_CACHE": "/tmp/transformers"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
